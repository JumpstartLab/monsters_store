<tr>
  <td>
    <%= link_to product.title, product_path(product.id) %>
  </td>
  <% if product.rated? %>
    <td>
      <div id="star-rating-<%= product.id %>"></div>
      <script>
        $('#star-rating-<%= product.id %>').raty({ readOnly: true, score: <%= product.stars %> });
      </script>
    </td>
    <td>
      <%= product.rated_at.to_s(:short) %>
    </td>
    <td>
      <% if product.rating_editable? %>
        <%= button_to t('crud.edit'), edit_product_rating_path(product.id, product.user_id), method: :get, class: "btn btn-mini inactive" %>
      <% end %>
    </td>
  <% else %>
    <td>
      <%= link_to t('ratings.please'), new_product_rating_path(product.id) %>
    </td>
    <td></td>
    <td></td>
  <% end %>
</tr>
